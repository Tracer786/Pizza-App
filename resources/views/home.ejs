<section class="hero py-16">
  <!-- section is the one below the navbar -->
  <div class="container mx-auto flex items-center justify-between">
    <!-- center vertically -->
    <!-- <div class="w-1/2 px-16"> -->
    <div class="w-1/2">
      <h6 class="text-lg"><em>Are You Hungry?</em></h6>
      <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
      <!-- <h1 class="text-6xl font-bold">Don't Wait!!</h1> -->
      <button
        class="px-6 py-2 rounded-full text-black font-bold mt-4 btn-primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2">
      <img src="/img/hero_pizza.png" alt="" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
  <!-- <div class="grid grid-cols-4 col-gap-12 row-gap-16"> -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">


    <!-- we need to loop this and fetch the data dynamically from the database -->

    <!-- this is the tag of ejs -->
    <!-- we have sent the key of pizza -->

    <!-- The % and > are used to open close the code of javascript -->
    <%pizzas.forEach(function(pizza){ %>
      <!-- <div class="w-64"> -->
        <div class="w-full md:w-64">
        <!-- <img class="h-40 mb-4 mx-auto" src="/img/pizza.png" alt="" /> -->
        <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image%>" alt="" />
        <div class="text-center">
          <h2 class="mb-4 text-lg"><%= pizza.name%></h2>
          <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span>
          <div class="flex items-center justify-around mt-6">
            <span class="font-bold text-lg">₹<%= pizza.price%></span>
            <!-- <button class="add-to-cart py-2 px-6 rounded-full"> -->
            <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
              <!-- this will be called in the file app.js -->
              <span>+</span>
              <span class="ml-4">Add</span>
            </button>
          </div>
        </div>
      </div>
    <% })%>



