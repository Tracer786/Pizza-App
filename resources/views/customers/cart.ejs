    </div>
    <div class="pizza-list">
      <%for(let pizza of Object.values(session.cart.items)){%>
        <div class="flex items-center my-8">
          <img class="w-24" src="/img/<%= pizza.item.image%>" alt="pizza" />
          <div class="flex-1 ml-4">
            <h1><%= pizza.item.name%></h1>
            <span><%= pizza.item.size%></span>
          </div>
          <span class="flex-1"><%= pizza.qty%> Pcs</span>
          <!-- flex-1 is used to push the element on the right to the rightmost corner -->
          <!-- and distribute the remaining space 50-50 -->
          <span class="font-bold text-lg">â‚¹<%= pizza.item.price * pizza.qty%></span>
        </div>
      <%}%>
    </div>
